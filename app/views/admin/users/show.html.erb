<header>
  <h1><%= @user %></h1>

  <ul class="actions">
    <li>
      <%= link_to "Edit User", edit_admin_user_path(@user), class: "edit" %>
    </li>
    <li>
      <%= link_to "Archive User", archive_admin_user_path(@user), 
        method: :patch, 
        data: { confirm: "Are you sure you want to archive this user?" },
        class: "delete" %>
    </li>
  </ul>
</header>